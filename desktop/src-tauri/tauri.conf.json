{
  "build": {
    "beforeDevCommand": "npm run dev --workspace=ui",
    "beforeBuildCommand": "npm run build --workspace=ui",
    "devPath": "http://localhost:3000",
    "distDir": "../ui/dist"
  },
  "package": {
    "productName": "The Family Tree App",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": ["$APPDATA/*", "$APPDATA/**"]
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.thefamilytreeapp",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "The Family Tree App",
        "width": 1200,
        "height": 800
      }
    ]
  }
}
