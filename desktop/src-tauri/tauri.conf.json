{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "The Family Tree App",
  "version": "0.1.0",
  "identifier": "com.thefamilytreeapp",
  "build": {
    "beforeDevCommand": "cd .. && npm run dev --workspace=ui",
    "beforeBuildCommand": "cd .. && npm run build --workspace=ui",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../ui/dist"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "The Family Tree App",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": ["icons/icon.png"],
    "targets": "all"
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}